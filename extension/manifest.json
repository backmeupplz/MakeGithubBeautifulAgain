{
  "manifest_version": 2,
  "name": "MakeGithubBeautifulAgain",
  "version": "1.0.0",
  "description": "Let's make github a Beautiful again!",
  "icons": {
    "32": "assets/icon@1x.png",
    "64": "assets/icon@2x.png",
    "128": "assets/icon@3x.png",
    "256": "assets/icon@4x.png"
  },
  "background": {
    "persistent": false,
    "scripts": [
      "scripts/background.js"
    ]
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Github is Beautiful",
    "default_icon": {
      "32": "assets/icon@1x.png",
      "64": "assets/icon@2x.png",
      "128": "assets/icon@3x.png",
      "256": "assets/icon@4x.png"
    }
  },
  "permissions": [
    "*://github.com/*",
    "*://*.github.com/*",
    "storage",
    "tabs"
  ]
}
